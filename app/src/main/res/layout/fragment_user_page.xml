<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/user_info_layout_bg"
    tools:context=".UserPage.UserPageFragment"
    android:paddingTop="@dimen/padding_top"
    >

    <RelativeLayout
        android:id="@+id/user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_info_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/setting"
            app:tint="@color/green"
            android:src="@drawable/setting_icon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_width="@dimen/setting_icon_length"
            android:layout_height="@dimen/setting_icon_length"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/user_avatar_length"
            android:layout_height="@dimen/user_avatar_length"
            android:src="@color/black"
            android:scaleType="centerCrop"
            app:shapeAppearance="@style/ovalshape"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/user_avatar_start_margin"
            />
        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/username_text_size"
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/avatar"
            android:layout_centerVertical="true"
            android:text="@string/no_login_username"
            android:layout_margin="@dimen/username_margin"
            />
    </RelativeLayout>

    <LinearLayout
        android:background="@drawable/play_list_layout_bg"
        android:id="@+id/bottom_group"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/user_info_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tabs_height">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/play_list_tabs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_name_default"
                    />
                <com.google.android.material.tabs.TabItem
                    android:id="@+id/tab_order_by_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tab_name_order_by_name"
                    />
            </com.google.android.material.tabs.TabLayout>
            <ImageView
                android:id="@+id/add_playlist_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/add_playlist_icon"
                android:layout_weight="0"
                app:tint="@color/green"
                />
        </LinearLayout>
        <androidx.viewpager2.widget.ViewPager2
            android:layout_weight="1"
            android:id="@+id/play_list_viewpager"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >
        </androidx.viewpager2.widget.ViewPager2>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>