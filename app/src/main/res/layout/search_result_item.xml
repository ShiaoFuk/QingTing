<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/result_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/result_item_padding"
    >
    <TextView
        style="@style/search_result_item_text"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/music_name"
        android:text="歌名歌名歌名歌名歌名歌名"
        android:textSize="@dimen/result_item_title_text_size"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        style="@style/search_result_item_text"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/music_genre"
        android:text="曲风曲风曲风曲风曲风曲风曲风曲风曲风曲风曲风曲风"
        android:textSize="@dimen/result_item_genre_text_size"
        app:layout_constraintTop_toBottomOf="@id/music_name"
        android:layout_marginTop="@dimen/result_item_padding"
        />
    <ImageView
        android:src="@drawable/play_icon"
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="@dimen/result_item_play_btn_margin"
        app:layout_constraintEnd_toStartOf="@id/add_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/green"
        />
    <ImageView
        android:src="@drawable/add_icon"
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="@dimen/result_item_play_btn_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="@color/green"
        />
</androidx.constraintlayout.widget.ConstraintLayout>