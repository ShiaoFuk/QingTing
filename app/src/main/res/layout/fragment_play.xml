<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayPage.PlayFragment"
    style="@style/MyBottomSheetDialog"
    >
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:background="@drawable/play_fragment_bg"
        android:paddingHorizontal="@dimen/play_fragment_padding"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/album"
            android:layout_width="@dimen/album_view_height"
            android:layout_height="@dimen/album_view_height"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/album_view_top_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:shapeAppearance="@style/ovalshape"
            android:src="@drawable/album"
            />
        <TextView
            android:textColor="@color/black"
            android:text="@string/no_music_playing"
            android:textSize="@dimen/result_item_title_text_size"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/search_result_item_text"
            app:layout_constraintBottom_toTopOf="@id/genre"
            app:layout_constraintStart_toStartOf="@id/seekbar"
            android:layout_marginStart="@dimen/song_length_margin_horzitonal"
            />
        <TextView
            android:text=""
            android:textSize="@dimen/result_item_genre_text_size"
            android:id="@+id/genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/seekbar"
            android:layout_marginBottom="@dimen/title_bottom_margin"
            app:layout_constraintStart_toStartOf="@id/seekbar"
            android:layout_marginStart="@dimen/song_length_margin_horzitonal"
            />
        <SeekBar
            android:id="@+id/seekbar"
            style="@style/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/album"
            app:layout_constraintBottom_toBottomOf="parent"
            android:max="0"
            android:progress="0"
            />
        <TextView
            android:id="@+id/song_length_left"
            android:text="@string/song_initial_length"
            app:layout_constraintTop_toBottomOf="@id/seekbar"
            app:layout_constraintStart_toStartOf="@id/seekbar"
            style="@style/song_length"
            />
        <TextView
            android:id="@+id/song_length"
            android:text="@string/song_initial_length"
            app:layout_constraintTop_toBottomOf="@id/seekbar"
            app:layout_constraintEnd_toEndOf="@id/seekbar"
            style="@style/song_length"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="@id/seekbar"
            app:layout_constraintEnd_toEndOf="@id/seekbar"
            app:layout_constraintTop_toBottomOf="@id/seekbar"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <ImageView
                android:id="@+id/last_song"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/control_btn_other_length"
                android:adjustViewBounds="true"
                android:src="@drawable/rewind_icon"
                android:layout_margin="@dimen/control_btn_margin"
                app:tint="@color/control_btn_color"
                />
            <ImageView
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/control_btn_center_length"
                android:adjustViewBounds="true"
                android:src="@drawable/play_icon"
                android:layout_margin="@dimen/control_btn_margin"
                app:tint="@color/control_btn_color"
                />
            <ImageView
                android:id="@+id/next_song"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/control_btn_other_length"
                android:adjustViewBounds="true"
                android:src="@drawable/forward_icon"
                android:layout_margin="@dimen/control_btn_margin"
                app:tint="@color/control_btn_color"
                />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>